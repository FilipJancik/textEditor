<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" hgap="10" vgap="10"
          gridLinesVisible="true">
    <columnConstraints>
        <ColumnConstraints percentWidth="50" />
        <ColumnConstraints percentWidth="50"/>
    </columnConstraints>
    <padding>
        <Insets top="50" left="20" right="20"/>
    </padding>

    <Label text="Toto je moje prve okno" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Label text="Toto je moje druhe okno" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Label text="Toto je moje tretie okno" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button text="Moj prvy button" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Button text="Moj druhy veeeeeeeeeeeeeeeeeelky button" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button text="Moj treti button" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <TextField GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"></TextField>

</GridPane>